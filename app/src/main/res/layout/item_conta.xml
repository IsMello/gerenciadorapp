<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_conta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venda "
                android:textColor="#123"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_conta_id_venda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#123" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor total : "
                android:textColor="#123"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_conta_valor_total"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor pago : "
                android:textColor="#123"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_conta_valor_pago"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor recebido :  "
                android:textColor="#123"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_conta_valor_recebido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#123" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data da venda : "
                android:textColor="#123" />

            <TextView
                android:id="@+id/item_conta_data_venda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#123"
                android:textStyle="italic" />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>